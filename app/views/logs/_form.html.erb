<div class="row">
  <%= simple_form_for(@log) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="col-sm-6">
      <div class="row mb-3">
        <div class="col-sm-8">
          <%= f.input :name %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-8">
          <%= f.file_field :file %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Upload", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
